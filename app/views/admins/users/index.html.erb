<% provide(:title, "All users") %>
<%= link_to "Create New User", new_admins_user_path, class: "btn btn-primary pull-right" %>
<h1>All users</h1>

<%= will_paginate %>

<ul class="users">
  <ul class="categories list-group">
  <% @users.each do |user| %>
    <% unless current_user?(user) %>
      <li id="user-<%= user.id %>">
        <%= gravatar_for user, size: 50 %>
        <%= link_to user.name, admins_user_path(user.id)%>
        <%= link_to "Delete", admins_user_path(user.id), method: :delete, class: "btn btn-danger pull-right" %>
        <%= link_to "Update", edit_admins_user_path(user.id), class: "btn btn-primary pull-right" %>
      </li>
    <% end %>
  <% end %>
  </ul>
</ul>

<%= will_paginate %>