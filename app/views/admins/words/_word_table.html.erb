<table class="table table-hover">
  <thead>
    <tr>
      <th>Id</th>
      <th>Word</th>
      <th>Answer</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% words.each do |word| %>
      <tr>
        <td><%= word.id %></td>
        <td><%= word.content %></td>
        <td>
          <ol>
            <% word.answers.each do |a| %>
              <li>
                <%= a.content %>
                <% if a.correct? %>
                  <span class="btn glyphicon glyphicon-ok alert-success"></span>
                <% end %>
              </li>
            <% end %>
          </ol>
        </td>
        <td>
          <%= link_to "Edit", edit_admins_category_word_path(category, word), class: "btn btn-primary" %> &nbsp
          <%= link_to "Delete", admins_category_word_path(category, word), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
