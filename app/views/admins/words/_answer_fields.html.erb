<%= javascript_include_tag 'custom', 'data-turbolinks-track' => true %>
<div class="answer">
  <%= f.label :content, "Answer" %>
  <%= f.hidden_field :_destroy %>
  <%= link_to "remove", "#", class: 'remove-answer', remote: true %>
  <%= f.hidden_field :id, value: f.object.id %>
  <%= f.text_field :content, class: "form-control", required: true %>
  <%= f.label :correct, class: "checkbox" do %>
    <%= f.check_box :correct, onchange: "check(this)" %>
  <% end %>
</div>